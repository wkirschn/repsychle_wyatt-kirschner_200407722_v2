<h1>{{title}}</h1>
<p>{{title}}</p>
<a href="/items/add">Add a New Item</a>
<table class="table table-striped table-hover">
    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Image</th>
        <th>Resin ID</th>
        <th>Disposal Method</th>
        <th>Eco Comment</th>
        <th>EcoScore</th>
        <th>Actions</th>

    </tr>


    {{#each items}}
        <tr>
            <td>{{this.name}}</td>
            <td>{{this.description}}</td>
            <td><img src="{{this.image}}" height="250px" width="250px"></td>
            <td>{{this.resin_id}}</td>
            <td>{{this.disposal_method}}</td>
            <td>{{this.eco_comment}}</td>
            <td>{{this.ecoScore}}</td>
            <td>
                <a href="/items/edit/{{this._id}}">Edit</a>

                <a href="/items/delete/{{this._id}}" class="test-danger delete">Delete</a>
            </td>
        </tr>

    {{/each}}

</table>